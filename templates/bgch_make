FLAGS = -O3 -mfpmath=sse -fstack-protector-all -g -W -Wall -Wextra -Wunused -Wcast-align -Werror -pedantic -pedantic-errors -Wfloat-equal -Wpointer-arith -Wformat-security -Wmissing-format-attribute -Wformat=1 -Wwrite-strings -Wcast-align -Wno-long-long -Woverloaded-virtual -Wnon-virtual-dtor -Wcast-qual -Wno-suggest-attribute=format -DM=10
# FLAGS = -O0 -g

FUNCTIONS_O = solve.o cl.o funcs.o
HEADERS = solve.h cl.h funcs.h
MATH = -lm

all: a01.out a02.out a03.out a04.out a05.out a06.out a07.out a08.out a09.out a10.out 

%o: %.cpp $(HEADERS)
	g++ -c $(FLAGS) $<

a%.out: main%.o $(FUNCTIONS_O)
	g++ $(FLAGS) $^ -o $@

archive:
	zip Pshenichnyi_ND.zip makefile *.cpp *.h

clean:
	rm -f *.o *.out Pshenichnyi_ND.zip valgrind_log.txt

